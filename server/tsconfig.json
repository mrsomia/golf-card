{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "rootDir": "src/",
    "outDir": "dist/",
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./prisma/seed.ts", "**/*.spec.ts"]
}
